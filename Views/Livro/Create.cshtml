@model AT_SQL.Models.Livro

@{
    ViewData["Title"] = "Create";
}

<h1>Escrever Resenha</h1>

<h4>Todos os valores são obrigatórios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Capa" class="control-label"></label>
                <input asp-for="Capa" class="form-control" />
                <span asp-validation-for="Capa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeLivro" class="control-label"></label>
                <input asp-for="NomeLivro" class="form-control" />
                <span asp-validation-for="NomeLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeUsuario" class="control-label"></label>
                <input asp-for="NomeUsuario" class="form-control" />
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailUsuario" class="control-label"></label>
                <input asp-for="EmailUsuario" class="form-control" />
                <span asp-validation-for="EmailUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resenha" class="control-label"></label>
                <input asp-for="Resenha" class="form-control" />
                <span asp-validation-for="Resenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Resenha" class="btn btn-outline-primary" style="margin-top:7px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><btn class="btn btn-outline-danger" style="margin-top:7px">Voltar</btn></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
